#!/bin/bash
# @author: Gia Tuấn
# @website: https://wptangtoc.com
# @email: giatuan@wptangtoc.com
# @since: 2024

OUTPUT=$(cat /etc/*release)
if  echo $OUTPUT | grep -q "AlmaLinux 8\|Rocky Linux 8" ; then
	SERVER_OS='almalinux'
elif echo $OUTPUT | grep -q "AlmaLinux 9\|Rocky Linux 9" ; then
	SERVER_OS='almalinux-9'
elif echo $OUTPUT | grep -q "Ubuntu 22.04" ; then
	SERVER_OS='ubuntu'
else
	echo "Hiện tại WPTangToc OLS không hỗ trợ với hệ điều hành $(hostnamectl | grep System | cut -f2 -d':'|sed 's/^ //g') của bạn"
	echo "Muốn sử dụng WPTangToc OLS vui lòng sử dụng hệ điều hành (Almalinux 8|Rocky linux 8| Ubuntu 22.04 LTS)"
	rm -f wptangtoc-ols
	exit
fi

rm -f wptangtoc-ols
curl -sO https://raw.githubusercontent.com/hncore/wptangtoc-ols/refs/heads/main/wptangtoc-ols-$SERVER_OS && bash wptangtoc-ols-$SERVER_OS $1
